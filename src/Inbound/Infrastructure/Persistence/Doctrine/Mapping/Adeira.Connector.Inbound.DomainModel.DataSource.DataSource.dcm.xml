<doctrine-mapping
		xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
							https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

	<entity name="Adeira\Connector\Inbound\DomainModel\DataSource\DataSource" table="data_sources">

		<id name="id" type="DataSourceId">
			<generator strategy="NONE"/>
		</id>

		<many-to-many target-entity="Adeira\Connector\Authentication\DomainModel\User\User" field="owners">
			<join-table name="data_sources_user_accounts">
				<join-columns>
					<join-column name="data_source_id"/>
				</join-columns>
				<inverse-join-columns>
					<join-column name="user_account_id"/>
				</inverse-join-columns>
			</join-table>
		</many-to-many>

		<field name="deviceName" column="device_name" type="string"/>

	</entity>

</doctrine-mapping>
