<doctrine-mapping
		xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
							https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

	<embeddable name="Adeira\Connector\Devices\DomainModel\Wind">
		<field name="speed" column="speed" type="Speed" nullable="true"/>
		<field name="direction" column="azimuth" type="float" nullable="true"/>
		<field name="gust" column="gust" type="Speed" nullable="true"/>
	</embeddable>

</doctrine-mapping>
